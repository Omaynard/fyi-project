<div class = "row">
	<div class = "col-md-4">
		<h1> Image </h1>
	</div>
	<div class= "col-md-8">
		<h1><%= @business.name %></h1>
		<p>Category: <%= @business.category.name %></p>
		<h2>Average rating </h2>
		<div class='average-like-rating' data-score=<%= @average_like %>></div>
		<span> Based on <%= @business.likes.count %> Feedbacks </span>
		<h1> Business Description </h1>
		<p><%= @business.description %></p>
	</div>

	<%= link_to "Edit", edit_business_path(@business) %>
	<%= link_to 'Destroy', @business, method: :delete %>
	<%= link_to "Back", root_path %>
	</div>

<div class = "row">

	<img src ="<%= @business.logo.medium %>">


	<div class= " col-md-4">
	<%= render @business.likes %>
	<div>
	<%= link_to "Leave feeback", new_business_like_path(@business) %>
	</div>
		<h1>ratings</h1>
	</div>
</div>
<script>
$('.like-rating').raty({
	readOnly: true,
	score: function(){
		return $(this).attr('data-score');
	},
	path: '/assets/'
});
</script>

<script>
$('.average-like-rating').raty({
	readOnly: true,
	path: '/assets/',
	score: function(){
		return $(this).attr('data-score')
	}
	
});
</script>




